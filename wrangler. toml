name = "whereis-api"  # The name of your worker
type = "javascript"   # Type of Worker (could also be "webpack" for more advanced setups)

[env.production]  # Defines the production environment
workers_dev = true  # Use workers_dev=true to deploy without needing to purchase a domain (for dev purposes)
route = ""  # Leave blank if deploying to workers.dev subdomain, or set the domain route for production deployment
account_id = "your_account_id"  # Your Cloudflare account ID
zone_id = "your_zone_id"  # Your Cloudflare zone ID, if using a custom domain
kv_namespaces = [
  { binding = "DATABASE", id = "your_kv_namespace_id" }
]  # If using KV (Key-Value storage), bind your KV namespace

[build]  # Define how your code is bundled
command = "npm install"  # Or any other build command if needed
